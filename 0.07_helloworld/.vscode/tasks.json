{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build helloworld.cpp",
			"type": "shell",
			"command": "g++ helloworld.cpp -o helloworld.exe",
			"args": [
				"-pedantic-errors",
				"-Wall",
				"-Weffc++",
				"-Wextra",
				"-Wconversion",
				"-Wsign-conversion",
				"-Werror",
				"${file}"
			],
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		}
	]
}
